_shortlist_completer() {
    local commands=$($1 shortlist)
    local cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY+=( $(compgen -W "$commands" -- $cur) )
}

# getopt with automatic support for bash completion.
#
# Invoke this function similarly to the way you'd invoke getopt with one small
# change: If the exit code of this function is 5, print the output of this
# function and exit 0 (see .bash_completion.test for an example).
#
# To add completion for your script, add
#   complete -F _getopt_completer <your script>
getopt_completer() {
    if [[ -z "$__GETOPT_COMPLETER" ]]; then
        getopt "$@"
        return
    fi

    local options=()
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -o|--options)
                local IFS=','
                local shortopts=( $2 )
                unset IFS

                for opt in "${shortopts[@]}"; do
                    options+=( "-${opt%:}" )
                done

                shift 2
                ;;
            -l|--long*)
                local IFS=','
                local longopts=( $2 )
                unset IFS

                for opt in "${longopts[@]}"; do
                    options+=( "--${opt%:}" )
                done

                shift 2
                ;;
            *)
                shift
                ;;
            --)
                break
                ;;
        esac
    done

    echo "${options[@]}"
    return 5
}
export -f getopt_completer

_getopt_completer() {
    export __GETOPT_COMPLETER=1
    local commands=$($1)
    export -n __GETOPT_COMPLETER

    local cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY+=( $(compgen -W "$commands" -- $cur) )
}

complete -F _shortlist_completer .install.sh

if command -v tmux &> /dev/null; then
    . ~/.bash_completion_tmux
fi
